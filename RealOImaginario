/*
Calcular la raíz cuadrada de un número
Si el número es negativo entonces 
imprimir que el número es imaginario
*/

#include <stdio.h>
#include <math.h>

int main(){
	
	float fNum1;
	
	printf("Ingresa un n%cmero: ",163);
	
	scanf("%f",&fNum1);
	
	if (fNum1 == 0){
		
		fNum1 = sqrt(fNum1);
		
		printf("\nLa ra%cz cuadrada del n%cmero es: %.2f",161,163,fNum1);
		
	}else if(fNum1 > 0){
		
		fNum1 = sqrt(fNum1);
		
		printf("\nLa ra%cz cuadrada del n%cmero es: %.2f",161,163,fNum1);
		
	}else{
		
		printf("\nTu n%cmero es imaginario",163);
		
	}//fin if-else
	
	return 0;
	
}//fin int main
