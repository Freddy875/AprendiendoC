//Tablas de Multiplicar Inicial y Final Flotante

#include <stdio.h>
int main(){
	
	float fMultiplicando, fMultiplicador,fProducto,fNumeroInicial,fNumeroFinal;
	
	printf("Este programa te muestra la tabla de multiplicar de un n%cmero que ingreses con un valor de inicio y un valor final ",163);
	
	printf("\n%cQu%c n%cmero quieres multiplicar%c ",168,130,163,63);
	
	scanf("%f",&fMultiplicando);
	
	printf("\n%cCon qu%c n%cmero quieres inicial%c ",168,130,163,63);
	
	scanf("%f",&fNumeroInicial);
	
	printf("\n%cHasta que n%cmero quieres terminar%c ",168,163,63);
	
	scanf("%f",&fNumeroFinal);
	
	if(fNumeroInicial > fNumeroFinal){
		
		printf("ERROR. El n%cmero inicial debe ser menor al n%cmero final",163,163);
		
	}else{
		
		for(fMultiplicador = fNumeroInicial; fMultiplicador <= fNumeroFinal; fMultiplicador++){
		
		fProducto = fMultiplicando * fMultiplicador;
		
		printf("\n%.2f x %.2f = %.2f",fMultiplicando,fMultiplicador,fProducto);
		
	    }//fin del for
		
	}//fin if-else
		
	return 0;
	
}//fin int main
